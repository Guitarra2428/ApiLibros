@model LibrosWeb.Models.ModelsVM.AutorLibroVM
@{
    ViewData["Title"] = "Crear Autor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">
    <div class="row">
        <div class="col-12">
            <h2 class=" text-primary"> Crear  Autor</h2>
        </div>

    </div>

    <br />
    <br />
    <div class="row">
        <div class="col-sm-12">
            <form method="post" asp-action="Create" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"> </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Autor.Nombre"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Autor.Nombre" class="form-control" />
                        <span asp-validation-for="Autor.Nombre" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Autor.Apellido"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Autor.Apellido" class="form-control" />
                        <span asp-validation-for="Autor.Apellido" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Autor.Sexo"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Autor.Sexo" class="form-control" />
                        <span asp-validation-for="Autor.Sexo" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Autor.Edad"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Autor.Edad" class="form-control" />
                        <span asp-validation-for="Autor.Edad" class="text-danger"></span>
                    </div>

                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label for="Libro">Libro</label>
                    </div>
                    <div class="col-8">
                        @Html.DropDownListFor(x=>x.Autor.libroID, Model.ListaLibro,
                          "Elija un Libro", new { @class= "form-control" })

                        <span asp-validation-for="Autor.libroID" class="text-danger"></span>
                    </div>

                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label for="Imagen">Imagen</label>
                    </div>
                    <div class="col-8">
                        <input type="file" name="archivo" asp-for="Autor.UrlImagen" class="form-control" />
                    </div>

                </div>

                <div class="form-group row">

                    <div class="col-8">
                        <input asp-for="Autor.FechaNacimiento" id="fechaCreacion" type="text" class="form-control" />
                    </div>

                </div>

                <div class="form-group row">

                    <div class="col">
                        <button type="submit" class="btn btn-primary form-control">Crear Autor</button>
                    </div>
                    <div class="col">
                        <a asp-action="Index">Volvel</a>
                    </div>

                </div>
            </form>
        </div>

    </div>
</div>
@section Scripts{

    <script>
    $(function () {
        $("#fechaCreacion").datepicker({
            changeMonth: false,
            changeYear: false,
             changeRange: "1500:2022",
               dateFormat:"yy-mm-dd"

        }).datepicker("setDate", new Date())
    });

    </script>
}