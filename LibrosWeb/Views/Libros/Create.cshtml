@model LibrosWeb.Models.ModelsVM.LibroCategoriaVM
@{
    ViewData["Title"] = "Crear Libro";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">
    <div class="row">
        <div class="col-12">
            <h2 class=" text-primary">Crear Libro</h2>
        </div>

    </div>

    <br />
    <br />
    <div class="row">
        <div class="col-sm-12">
            <form method="post" asp-action="Create" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"> </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Libro.Titulo"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Libro.Titulo" class="form-control" />
                        <span asp-validation-for="Libro.Titulo" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Libro.Descripcion"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Libro.Descripcion" class="form-control" />
                        <span asp-validation-for="Libro.Descripcion" class="text-danger"></span>
                    </div>

                </div>
               
                

                <div class="form-group row">
                    <div class="col-4">
                        <label for="Categoria">Categoria</label>
                    </div>
                    <div class="col-8">
                        @Html.DropDownListFor(x => x.Libro.categoriaID, Model.ListaCategoria,
                          "Elija una Categoria", new { @class = "form-control" })

                        <span asp-validation-for="Libro.categoriaID" class="text-danger"></span>
                    </div>

                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label for="Imagen">Imagen</label>
                    </div>
                    <div class="col-8">
                        <input type="file" name="archivo" asp-for="Libro.UrlImagen" class="form-control" />
                    </div>

                </div>

                <div class="form-group row">

                    <div class="col-8">
                        <input asp-for="Libro.FechaLanzamiento" id="fechaCreacion" type="text" class="form-control" />
                    </div>

                </div>

                <div class="form-group row">

                    <div class="col">
                        <button type="submit" class="btn btn-primary form-control">Crear Libro</button>
                    </div>
                    <div class="col">
                        <a asp-action="Index">Volvel</a>
                    </div>

                </div>
            </form>
        </div>

    </div>
</div>
@section Scripts{

    <script>
    $(function () {
        $("#fechaCreacion").datepicker({
            changeMonth: false,
            changeYear: false,
             changeRange: "1500:2022",
               dateFormat:"yy-mm-dd"

        }).datepicker("setDate", new Date())
    });

    </script>
}